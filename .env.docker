# Docker environment variables
# Database (Docker container)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/cost_optimizer

# Redis (Docker container)
REDIS_URL=redis://redis:6379

# Ollama (accessible from host)
OLLAMA_BASE_URL=http://host.docker.internal:11434

# AWS Configuration (use actual values or environment variables)
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID:-your_aws_key_here}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY:-your_aws_secret_here}
AWS_DEFAULT_REGION=us-east-1

# GCP Configuration
GCP_PROJECT_ID=${GCP_PROJECT_ID:-your_gcp_project}
GOOGLE_APPLICATION_CREDENTIALS=/root/.config/gcloud/service-account.json

# Azure Configuration
AZURE_CLIENT_ID=${AZURE_CLIENT_ID:-your_azure_client_id}
AZURE_CLIENT_SECRET=${AZURE_CLIENT_SECRET:-your_azure_secret}
AZURE_TENANT_ID=${AZURE_TENANT_ID:-your_azure_tenant}
AZURE_SUBSCRIPTION_ID=${AZURE_SUBSCRIPTION_ID:-your_azure_subscription}

# OpenAI API (optional)
OPENAI_API_KEY=${OPENAI_API_KEY:-your_openai_key}

# Security
SECRET_KEY=${SECRET_KEY:-docker_development_secret_key_change_in_production}
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=docker

# Logging
LOG_LEVEL=INFO

# Frontend (for external access)
REACT_APP_API_URL=http://localhost:8000

# Vite proxy configuration for Docker
VITE_BACKEND_URL=http://backend:8000
